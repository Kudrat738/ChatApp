<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/back">
    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="15dp"></LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/head" />
    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="15dp"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:elevation="5dp"
        app:cardBackgroundColor="?android:attr/colorPressedHighlight">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Account："
            android:textSize="18sp"
            android:textColorLink="@android:color/holo_green_light" />

        <EditText
            android:id="@+id/account"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="15dp"
        android:layout_height="15dp"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:elevation="5dp"
        app:cardBackgroundColor="@android:color/holo_orange_light">

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Password："
            android:textSize="18sp"
            android:textColorLink="@android:color/holo_green_light" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/remember"
        app:backgroundTint="@android:color/background_light" />
        <ImageView
            android:id="@+id/remember_view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/first"
            android:layout_gravity="center|bottom"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="right|bottom"
            android:background="#ffff"
            android:src="@drawable/login"
            app:rippleColor="?attr/colorButtonNormal"
            app:backgroundTint="?attr/colorBackgroundFloating" />
    </FrameLayout>
</LinearLayout>